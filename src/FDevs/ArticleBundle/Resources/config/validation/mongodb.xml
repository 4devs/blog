<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="FDevs\ArticleBundle\Model\Tag">
        <constraint name="Doctrine\Bundle\MongoDBBundle\Validator\Constraints\Unique">
            <option name="fields">id</option>
            <option name="message">f_devs.uri.already_used</option>
        </constraint>

        <constraint name="Doctrine\Bundle\MongoDBBundle\Validator\Constraints\Unique">
            <option name="fields">title</option>
            <option name="message">f_devs.title.already_used</option>
        </constraint>
    </class>

    <class name="FDevs\ArticleBundle\Model\Article">
        <constraint name="Doctrine\Bundle\MongoDBBundle\Validator\Constraints\Unique">
            <option name="fields">id</option>
            <option name="message">f_devs.uri.already_used</option>
        </constraint>

        <constraint name="Doctrine\Bundle\MongoDBBundle\Validator\Constraints\Unique">
            <option name="fields">title</option>
            <option name="message">f_devs.title.already_used</option>
        </constraint>
    </class>

    <class name="FDevs\ArticleBundle\Model\Category">
        <constraint name="Doctrine\Bundle\MongoDBBundle\Validator\Constraints\Unique">
            <option name="fields">id</option>
            <option name="message">f_devs.uri.already_used</option>
        </constraint>

        <constraint name="Doctrine\Bundle\MongoDBBundle\Validator\Constraints\Unique">
            <option name="fields">title</option>
            <option name="message">f_devs.title.already_used</option>
        </constraint>
    </class>

</constraint-mapping>
